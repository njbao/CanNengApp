	text-overflow: ellipsis;
}
.company-selected{
	height: 96rpx;
	width:234rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	color: rgba(57,130,252,1);
	font-size: 28rpx;
}
.substation-block{
	width: 234rpx;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
