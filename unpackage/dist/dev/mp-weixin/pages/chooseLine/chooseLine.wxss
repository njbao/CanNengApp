	color: rgba(57,130,252,1);
	font-size: 28rpx;
	background:rgba(249,249,249,1);
	border-left: 4px solid rgba(57,130,252,1);
}
.company-block{
	width: 234rpx;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	margin-left: 6rpx;
}
.company{
	height: 96rpx;
	width:234rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
